<div class="container project-container bg-white p-4 mb-4">
  <div class="row">
<div class="container text-center my-4">
  <div class="container-project">
    <div class="text-project">
      <h3 class="h3-font">See the final results</h3>
      <p class="p-font">Our members join a team, started working and created their dream product.</p>
      <%# Code for live finished project data %>
      <div class="col-4">
        <% @finished_projects.each do |project| %>
            <% @project = project %>
              <div class="card project-finish">
                <a class="img-card" href="">
                  <i id="fas" class="fas fa-heart"></i>
                  <img id="card-img"
                    src="https://images.unsplash.com/photo-1589561253898-768105ca91a8?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1349&q=80" />
                </a>
                <a href="">
                </a>
                <div class="card-content text-center p-3">
                  <h2 class="card-title">
                    <a href="">
                      <%= @project.name %>
                    </a>
                  </h2>
                  <p class=""><%= @project.description %></p>
                </div>
                <% teammate_ids = @project.teammates %>
                <% teammate_ids.each do |teammate_id| %>
                <% teammate = User.find_by(id: teammate_id) %>
                  <div class="card-read-more pt-2">
                    <div class="card-footer-bottom d-flex justify-content-around py-2">
                      <div class="avatar-all">
                        <%= cl_image_tag teammate.avatar_photo.key, height: 35, width: 35, crop: :scale, class: "avatar-menu"%></div>
                        <div class="avatar-text h2-font"style="font-size:20px"><%= teammate.name %></div>
                        <p style="font-size:12px"><%= teammate.city %></p>
                      </div>
                    </div>
                <% end %>
                    <hr>
                  </div>
                <div class="detail-footer">
                  <a href="">
                    <div class="p-font-info details"><%= link_to  "Details", project_path(@project) %></div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  </div>

<br>
<hr>
<br>


