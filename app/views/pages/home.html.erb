<%# CARDS %>
<div class="container home-card-section bg-white">
  <div class="text-sectios text-center mt-4">
    <h3 class="h3-font pt-3">See all the new ideas to join</h3>
    <p class="p-font mb-4">Many of us have amazing ideas and we are looking for the perfect team to build it.</p>
  </div>
  <div class="container project-container bg-white p-5">
  <div class="cards">
    <% @projects.each do |project| %>
    <div class="">
      <div class="">
        <div class="card">
          <a class="img-card" href="">
            <%= cl_image_tag project.photo.key, height: 300, width: 400, crop: :fill %>
          </a>
          <a href="">
            <div class="p-font join"><%= link_to "Join", project_path(project)  %>
            </div>
          </a>

          <div class="card-content text-center p-3">
            <h2 class="card-title">
              <a href="">
                <%= project.name %>
              </a>
            </h2>
            <p class=""><%= project.description %> </p>
          </div>

        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>


