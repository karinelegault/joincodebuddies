<div class="container">

    <div id="notice-wrapper">
        <% flash.each do |type, msg| %>
        <div class=" alert alert-info">
            <%= msg %>
        </div>
        <% end %>
    </div>



<script>
    document.getElementByClassName("alert ").fadeOut(3000);
</script>

</div>

<div class="project-show-container mb-5 mt-5">
  <div class="card-product">
    <%= cl_image_tag @project.photo.key, height: 300, width: 400, crop: :fill %>
    <div class="card-product-infos ml-3">

      <h2 class="h2-font mb-3"><%= @project.name %></h2>
      <div class="btn-links">
        <div class="links-project d-flex">
          <%= button_to "Join", project_join_request_path(@project), :method => :get, :remote => true, class: "join mr-1", "data-toggle" => "modal",  "data-target" => "#exampleModal"  %>
        </div>



      </div>



      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Your request has been processed</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <h3>Success!</h3>
            </div>
            <div class="modal-footer">
              <div class="links-project d-flex">
                <div class="p-font">Follow the status for your request in your dashboard</div>
                <%= link_to "My Dashboard", user_dashboard_requests_path, class: "dashboard-button" %>
                </div>
              </div>
          </div>
        </div>
      </div>


      <br>
      <p class="p-font"><%= @project.description %></p>
      <br><br>

        <h3 class="h2-font members">Members</h3>
      <div class="members d-flex mt-3 ">
          <% @project_teammates_ids.each do |teammate_id| %>
          <% teammate = User.find_by(id: teammate_id) %>
          <div class="avatar-all show-page-project ">
            <%= link_to user_path(teammate) do %>
            <%= cl_image_tag teammate.avatar_photo.key, height: 35, width: 35, crop: :scale, class: "avatar-menu"%>
            <% end %>
          <div class="avatar-text p-font"><%= teammate.name.capitalize %></div>
            <%# <div class="p-font show-card">Montreal</div> %>
          </div>
          <% end %>
      </div>
    </div>
   </div>

</div>
