<div class="container">
<form id="form"> 
  <input type="search" id="query" name="q" placeholder="Search...">
  <button>Search</button>
</form>
<h1>List of projects</h1>
<% @projects.each do |project| %>
<h2> <%= project.name %> </h2>
<p> <%= project.description %> </p>
<%= link_to "Details", project_path(project)  %>

<% end %>
<p>**************************************</p>
<%= link_to "Create New Project", new_project_path %>
<%= link_to "Outgoing Requests", outgoing_requests_path %>
<%= link_to "Incoming Requests", incoming_requests_path %>

</div>

<div class="container d-flex">
<% @projects.each do |project| %>
    <div class="cards-list">
        <div class="card 1">
            <div class="card_image"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://helpiewp.com/wp-content/uploads/2019/09/How-to-create-an-Airbnb-like-website.jpg)"> </div>
                <div class="card_title title-white">
                <h3><%= project.name %> </h3>
                </div>
                <div class="text-center">
                <%= link_to "Go see", project_path(project)  %>
                <p class="text-center"> <%= project.description %> </p>
                </div>
            </div>
        </div>
        <% end %>
    </div>  
</div>
